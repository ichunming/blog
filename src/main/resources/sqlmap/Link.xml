<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ichunming.dao.ILink">

  <resultMap type="Link" id="LinkResult">
    <id column="LINK_ID" jdbcType="INTEGER" property="id"/>
    <result column="TYPE" jdbcType="CHAR" property="type"/>
    <result column="LINK_CONTENT" jdbcType="VARCHAR" property="content"/>
    <collection property="postList" resultMap="com.ichunming.dao.IPost.PostResult"/>
  </resultMap>
  <select id="getAllTags" resultMap="LinkResult">
	SELECT a.ID LINK_ID,a.TYPE,a.CONTENT LINK_CONTENT
	FROM link a
	WHERE a.TYPE = '1'
  </select>
</mapper>
